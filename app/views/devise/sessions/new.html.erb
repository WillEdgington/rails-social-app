<div class="auth-form-container">
  <h2>Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-field">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-textfield" %>
      <% resource.errors.full_messages_for(:email).each do |msg| %>
        <div class="form-error"><%= msg %></div>
      <% end %>
    </div>

    <div class="form-field">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-textfield" %>
      <% resource.errors.full_messages_for(:password).each do |msg| %>
        <div class="form-error"><%= msg %></div>
      <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-field remember-me">
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="form-actions">
      <%= f.submit "Log In", class: "form-submit-btn" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
