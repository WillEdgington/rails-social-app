<div class="auth-form-container edit-profile">
  <h2>Edit Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
               html: { method: :put, multipart: true }) do |f| %>

    <% if resource.errors.any? %>
      <div class="form-error-summary">
        <h4><%= pluralize(resource.errors.count, "error") %> prevented saving:</h4>
        <ul>
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-field">
      <%= f.label :username, class: "form-label" %>
      <%= f.text_field :username, autofocus: true, class: "form-textfield" %>
    </div>

    <div class="form-field">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-textfield" %>
    </div>

    <div class="form-field">
      <%= f.label :avatar, class: "form-label" %>
      <%= f.file_field :avatar, class: "form-textfield" %>
      <% if resource.avatar.attached? %>
        <div class="current-avatar">
          <p>Current Avatar:</p>
          <%= image_tag resource.avatar.variant(resize_to_fill: [100, 100]), class: "avatar-preview" %>
        </div>
      <% end %>
    </div>

    <hr class="form-divider">

    <p class="form-note">Leave password fields blank if you donâ€™t want to change your password.</p>

    <div class="form-field">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-textfield" %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-textfield" %>
    </div>

    <div class="form-field">
      <%= f.label :current_password, "Current password (required only for email changes)", class: "form-label" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-textfield" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Update Profile", class: "form-submit-btn" %>
    </div>

  <% end %>

  <hr class="form-divider">

  <div class="cancel-account">
    <h4>Delete your account</h4>
    <%= button_to "Cancel my account", registration_path(resource_name),
                  data: { turbo_confirm: "Are you sure?" }, method: :delete,
                  class: "delete-account-btn" %>
  </div>
</div>
