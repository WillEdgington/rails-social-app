<div class="auth-form-container">
  <h2>Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-field">
      <%= f.label :username, class: "form-label" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-textfield" %>
      <% resource.errors.full_messages_for(:username).each do |msg| %>
        <div class="form-error"><%= msg %></div>
      <% end %>
    </div>
    
    <div class="form-field">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-textfield" %>
      <% resource.errors.full_messages_for(:email).each do |msg| %>
        <div class="form-error"><%= msg %></div>
      <% end %>
    </div>

    <div class="form-field">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-textfield" %>
      <% resource.errors.full_messages_for(:password).each do |msg| %>
        <div class="form-error"><%= msg %></div>
      <% end %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-textfield" %>
      <% resource.errors.full_messages_for(:password_confirmation).each do |msg| %>
        <div class="form-error"><%= msg %></div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.submit "Sign Up", class: "form-submit-btn" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
